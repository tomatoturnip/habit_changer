<div class="container">
  <h1>Events</h1>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Start time</th>
        <th>End time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
          <td><%= event.title %></td>
          <td><%= event.start_time %></td>
          <td><%= event.end_time %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to edit_event_path(event) do %>
                <i class="fa fa-pencil-square-o"></i>
              <% end %>
          </td>
          <td><%= link_to event, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-remove"></i>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Event', new_event_path, class: 'btn btn-default' %>
  <br>

</div>

<br>
